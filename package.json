{
  "name": "liverage",
  "description": "Makes your code coverage a real time live source",
  "version": "0.0.0-semantic-release",
  "author": "Gleb Bahmutov <gleb.bahmutov@gmail.com>",
  "bugs": "https://github.com/bahmutov/liverage/issues",
  "config": {
    "pre-git": {
      "commit-msg": "simple",
      "pre-commit": [
        "npm run deps",
        "npm test",
        "npm run ban"
      ],
      "pre-push": [
        "npm run secure",
        "npm run license",
        "npm run ban -- --all",
        "npm run size"
      ],
      "post-commit": [],
      "post-merge": []
    }
  },
  "files": [
    "src/*.js",
    "!src/*-spec.js"
  ],
  "homepage": "https://github.com/bahmutov/liverage#readme",
  "keywords": [
    "code coverage",
    "cover",
    "coverage",
    "live",
    "real-time",
    "realtime"
  ],
  "license": "MIT",
  "main": "src/index.js",
  "repository": {
    "type": "git",
    "url": "https://github.com/bahmutov/liverage.git"
  },
  "scripts": {
    "ban": "ban",
    "deps": "deps-ok",
    "format": "standard-format -w src/*.js examples/*/*.js",
    "issues": "git-issues",
    "license": "license-checker --production --onlyunknown --csv",
    "lint": "standard --verbose src/*.js examples/*/*.js",
    "pretest": "npm run format && npm run lint",
    "secure": "nsp check",
    "size": "t=\"$(npm pack .)\"; wc -c \"${t}\"; tar tvf \"${t}\"; rm \"${t}\";",
    "test": "npm run unit",
    "unit": "mocha src/*-spec.js",
    "example": "nyc --cache true --reporter html node examples/basic/index.js 5",
    "example-json": "nyc --cache true --reporter json node examples/basic/index.js 5",
    "example-live": "nyc --require ./src --exclude src/index.js --reporter html node examples/basic/index.js 50",
    "semantic-release": "semantic-release pre && npm publish && semantic-release post"
  },
  "devDependencies": {
    "ban-sensitive-files": "1.8.2",
    "deps-ok": "1.1.0",
    "git-issues": "1.2.0",
    "license-checker": "5.1.1",
    "mocha": "2.4.5",
    "nsp": "2.3.2",
    "nyc": "6.4.0",
    "pre-git": "3.8.3",
    "standard": "6.0.8",
    "standard-format": "2.1.1",
    "semantic-release": "^4.3.5"
  },
  "dependencies": {
    "check-more-types": "2.20.2",
    "debug": "2.2.0",
    "glob": "7.0.3",
    "istanbul": "0.4.3",
    "lazy-ass": "1.4.0",
    "real-time-coverage": "1.1.0",
    "ws": "1.1.0"
  }
}
